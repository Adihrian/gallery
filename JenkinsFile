pipeline {
    agent any

    environment {
        NODE_ENV = "test"
        MONGO_URI = "mongodb+srv://adih123:adih123@gallerycluster.cf7kn7q.mongodb.net/darkroom-test?retryWrites=true&w=majority"
    }

    stages {
        stage("Checkout") {
            steps {
                git branch: "master", url: "https://github.com/Adihrian/gallery.git"
            }
        }
        stage("Install Dependencies") {
            steps {
                sh "npm install"
            }
        }
        stage("Run Tests") {
            steps {
                sh "npm test"
            }
        }
        stage("Deploy") {
            steps {
                sh "node server.js &"
                echo "Deployed to Render"
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}

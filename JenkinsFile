pipeline {
    agent any

    environment {
        NODE_ENV = "test" // Change to "development" or "production" if needed
    }

    stages {
        stage("Checkout") {
            steps {
                git branch: "master", url: "https://github.com/Adihrian/gallery.git"
            }
        }

        stage("Install Dependencies") {
            steps {
                // Include dev dependencies so Mocha is installed
                sh "npm install --include=dev"
            }
        }

        stage("Run Tests") {
            steps {
                // Use Jenkins credential for test Mongo URI
                withCredentials([string(credentialsId: 'mongo-test-uri', variable: 'MONGO_TEST_URI')]) {
                    sh "echo Using NODE_ENV=$NODE_ENV"
                    sh "npm test"
                }
            }
        }

        stage("Deploy") {
            when {
                expression { return env.NODE_ENV != "test" } // Skip deploy if test
            }
            steps {
                // Use production Mongo URI if deploying
                withCredentials([string(credentialsId: 'mongo-prod-uri', variable: 'MONGO_PROD_URI')]) {
                    sh "NODE_ENV=production node server.js &"
                    echo "Deployed to production"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}
